@model IEnumerable<BookingManagement.Repositories.Models.Notification>
@{
    ViewData["Title"] = "Thông báo";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Thông báo</h1>
    
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Danh sách thông báo</h6>
            <div>
                <form asp-action="MarkAllAsRead" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-primary">
                        <i class="bi bi-check-all"></i> Đánh dấu đã đọc tất cả
                    </button>
                </form>
            </div>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="text-center py-4">
                    <i class="bi bi-bell-slash text-muted" style="font-size: 3rem;"></i>
                    <p class="mt-3">Bạn không có thông báo nào.</p>
                </div>
            }
            else
            {
                <div class="list-group">
                    @foreach (var notification in Model)
                    {
                        <div class="list-group-item list-group-item-action @(notification.IsRead == false ? "bg-light" : "")">
                            <div class="d-flex w-100 justify-content-between">
                                <h5 class="mb-1">
                                    @if (notification.IsRead == false)
                                    {
                                        <span class="badge bg-primary me-2">Mới</span>
                                    }
                                    @notification.Title
                                </h5>
                                <small>@notification.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                            </div>
                            <p class="mb-1">@notification.Message</p>
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                @if (notification.BookingId.HasValue)
                                {
                                    <a asp-controller="Booking" asp-action="Details" asp-route-id="@notification.BookingId" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i> Xem đặt phòng
                                    </a>
                                }
                                else
                                {
                                    <span></span>
                                }
                                
                                @if (notification.IsRead == false)
                                {
                                    <form asp-action="MarkAsRead" method="post">
                                        <input type="hidden" name="id" value="@notification.NotificationId" />
                                        <button type="submit" class="btn btn-sm btn-outline-secondary">
                                            <i class="bi bi-check"></i> Đánh dấu đã đọc
                                        </button>
                                    </form>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
