@model BookingManagement.Services.DTOs.OperationalHoursDto

@{
    ViewData["Title"] = "Create Operational Hours";
}

<div class="container-fluid">
    <h1 class="my-4">Create Operational Hours</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">New Operational Hours Schedule</h5>
        </div>
        <div class="card-body">
            <form asp-action="CreateOperationalHours" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Name" class="control-label">Schedule Name</label>
                            <input asp-for="Name" class="form-control" placeholder="E.g., Regular Weekday Hours" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3" placeholder="Optional description"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="RoomId" class="control-label">Apply To Room (Optional)</label>
                            <select asp-for="RoomId" asp-items="ViewBag.Rooms" class="form-select">
                                <option value="">-- All Rooms/Campus-wide --</option>
                            </select>
                            <small class="text-muted">Leave blank to apply campus-wide</small>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="control-label">Days of Week</label>
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        @foreach (var day in ViewBag.DaysOfWeek)
                                        {
                                            <div class="col-md-6">
                                                <div class="form-check">
                                                    <input type="checkbox" name="selectedDays" value="@day.Value" 
                                                           @(Model.DaysOfWeekList.Contains(int.Parse(day.Value)) ? "checked" : "") 
                                                           class="form-check-input" id="day-@day.Value" />
                                                    <label class="form-check-label" for="day-@day.Value">@day.Text</label>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="OpenTime" class="control-label">Opening Time</label>
                                    <input asp-for="OpenTime" type="time" class="form-control" />
                                    <span asp-validation-for="OpenTime" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="CloseTime" class="control-label">Closing Time</label>
                                    <input asp-for="CloseTime" type="time" class="form-control" />
                                    <span asp-validation-for="CloseTime" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Active</label>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create
                    </button>
                    <a asp-action="OperationalHours" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
