@model IEnumerable<BookingManagement.Services.DTOs.OperationalHoursDto>

@{
    ViewData["Title"] = "Operational Hours";
}

<div class="container-fluid">
    <h1 class="my-4">Operational Hours</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Manage Operational Hours</h5>
        </div>
        <div class="card-body">
            <p>
                Set the standard operating hours for buildings and rooms. These hours define when users can book rooms under normal circumstances.
            </p>
            <p>
                <a asp-action="CreateOperationalHours" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Create New Schedule
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Building/Room</th>
                            <th>Days</th>
                            <th>Hours</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                        @if (item.RoomId.HasValue)
                                        {
                                            <span class="badge bg-info">Room</span> @item.RoomName
                                        }
                                        else if (item.BuildingId.HasValue)
                                        {
                                            <span class="badge bg-secondary">Building</span> @item.BuildingId
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">All Campus</span>
                                        }
                                    </td>
                                    <td>@item.DaysOfWeekDisplay</td>
                                    <td>@item.OpenTime - @item.CloseTime</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="EditOperationalHours" asp-route-id="@item.OperationalHoursId" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.OperationalHoursId">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </div>

                                        <!-- Delete Confirmation Modal -->
                                        <div class="modal fade" id="deleteModal-@item.OperationalHoursId" tabindex="-1" aria-labelledby="deleteModalLabel-@item.OperationalHoursId" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deleteModalLabel-@item.OperationalHoursId">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete the operational hours schedule "@item.Name"?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-action="DeleteOperationalHours" asp-route-id="@item.OperationalHoursId" method="post">
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">No operational hours defined yet.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
