@model BookingManagement.Services.DTOs.SpecialScheduleDto

@{
    ViewData["Title"] = "Edit Special Schedule";
}

<div class="container-fluid">
    <h1 class="my-4">Edit Special Schedule</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Edit Special Schedule</h5>
        </div>
        <div class="card-body">
            <form asp-action="EditSpecialSchedule" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="SpecialScheduleId" />
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="Title" class="control-label">Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Description" class="control-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="RoomId" class="control-label">Apply To Room (Optional)</label>
                            <select asp-for="RoomId" asp-items="ViewBag.Rooms" class="form-select">
                                <option value="">-- All Rooms/Campus-wide --</option>
                            </select>
                            <small class="text-muted">Leave blank to apply campus-wide</small>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="row mb-3">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="StartDate" class="control-label">Start Date</label>
                                    <input asp-for="StartDate" type="date" class="form-control" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="EndDate" class="control-label">End Date</label>
                                    <input asp-for="EndDate" type="date" class="form-control" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input asp-for="IsClosed" class="form-check-input" id="isClosed" onchange="toggleTimeInputs()" />
                            <label asp-for="IsClosed" class="form-check-label">Facility Closed</label>
                            <small class="text-muted d-block">Check this if the facility is completely closed during this period</small>
                        </div>

                        <div id="hoursSection">
                            <div class="row mb-3">
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="OpenTime" class="control-label">Opening Time</label>
                                        <input asp-for="OpenTime" type="time" class="form-control" />
                                        <span asp-validation-for="OpenTime" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-group">
                                        <label asp-for="CloseTime" class="control-label">Closing Time</label>
                                        <input asp-for="CloseTime" type="time" class="form-control" />
                                        <span asp-validation-for="CloseTime" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Active</label>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Save Changes
                    </button>
                    <a asp-action="SpecialSchedules" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function toggleTimeInputs() {
            var isClosed = document.getElementById('isClosed').checked;
            var hoursSection = document.getElementById('hoursSection');
            
            if (isClosed) {
                hoursSection.style.display = 'none';
            } else {
                hoursSection.style.display = 'block';
            }
        }
        
        // Call on page load
        document.addEventListener("DOMContentLoaded", function() {
            toggleTimeInputs();
        });
    </script>
}
