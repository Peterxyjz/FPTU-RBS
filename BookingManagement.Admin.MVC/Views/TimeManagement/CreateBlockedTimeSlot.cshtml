@model BookingManagement.Services.DTOs.BlockedTimeSlotDto

@{
    ViewData["Title"] = "Block Time Slot";
}

<div class="container-fluid">
    <h1 class="my-4">Block Time Slot</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Block a Time Slot</h5>
        </div>
        <div class="card-body">
            <form asp-action="CreateBlockedTimeSlot" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CreatedById" />
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="TimeSlotId" class="control-label">Time Slot</label>
                            <select asp-for="TimeSlotId" asp-items="ViewBag.TimeSlots" class="form-select" required>
                                <option value="">-- Select Time Slot --</option>
                            </select>
                            <span asp-validation-for="TimeSlotId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="RoomId" class="control-label">Room (Optional)</label>
                            <select asp-for="RoomId" asp-items="ViewBag.Rooms" class="form-select">
                                <option value="">-- All Rooms --</option>
                            </select>
                            <small class="text-muted">Leave blank to block this time slot for all rooms</small>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="BlockType" class="control-label">Block Type</label>
                            <select asp-for="BlockType" asp-items="ViewBag.BlockTypes" class="form-select" required>
                                <option value="">-- Select Block Type --</option>
                            </select>
                            <span asp-validation-for="BlockType" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="row mb-3">
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="StartDate" class="control-label">Start Date</label>
                                    <input asp-for="StartDate" type="date" class="form-control" />
                                    <span asp-validation-for="StartDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label asp-for="EndDate" class="control-label">End Date</label>
                                    <input asp-for="EndDate" type="date" class="form-control" />
                                    <span asp-validation-for="EndDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Reason" class="control-label">Reason</label>
                            <textarea asp-for="Reason" class="form-control" rows="3" placeholder="Explain why this time slot is being blocked"></textarea>
                            <span asp-validation-for="Reason" class="text-danger"></span>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input asp-for="IsActive" class="form-check-input" />
                            <label asp-for="IsActive" class="form-check-label">Active</label>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Block Time Slot
                    </button>
                    <a asp-action="BlockedTimeSlots" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
