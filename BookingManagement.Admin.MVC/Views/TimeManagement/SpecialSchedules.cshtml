@model IEnumerable<BookingManagement.Services.DTOs.SpecialScheduleDto>

@{
    ViewData["Title"] = "Special Schedules";
}

<div class="container-fluid">
    <h1 class="my-4">Special Schedules</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Manage Special Schedules</h5>
        </div>
        <div class="card-body">
            <p>
                Create special schedules for holidays, events, or other occasions when normal operational hours don't apply.
                You can set custom hours or mark facilities as closed.
            </p>
            <p>
                <a asp-action="CreateSpecialSchedule" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Create New Special Schedule
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to Dashboard
                </a>
            </p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Date Range</th>
                            <th>Building/Room</th>
                            <th>Hours/Status</th>
                            <th>Active</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@item.Title</strong>
                                        @if (!string.IsNullOrEmpty(item.Description))
                                        {
                                            <br /><small class="text-muted">@item.Description</small>
                                        }
                                    </td>
                                    <td>@item.StartDateDisplay - @item.EndDateDisplay</td>
                                    <td>
                                        @if (item.RoomId.HasValue)
                                        {
                                            <span class="badge bg-info">Room</span> @item.RoomName
                                        }
                                        else if (item.BuildingId.HasValue)
                                        {
                                            <span class="badge bg-secondary">Building</span> @item.BuildingId
                                        }
                                        else
                                        {
                                            <span class="badge bg-primary">All Campus</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsClosed)
                                        {
                                            <span class="badge bg-danger">Closed</span>
                                        }
                                        else if (!string.IsNullOrEmpty(item.OpenTime) && !string.IsNullOrEmpty(item.CloseTime))
                                        {
                                            <span>@item.OpenTime - @item.CloseTime</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Regular Hours</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="EditSpecialSchedule" asp-route-id="@item.SpecialScheduleId" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-pencil"></i> Edit
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal-@item.SpecialScheduleId">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </div>

                                        <!-- Delete Confirmation Modal -->
                                        <div class="modal fade" id="deleteModal-@item.SpecialScheduleId" tabindex="-1" aria-labelledby="deleteModalLabel-@item.SpecialScheduleId" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" id="deleteModalLabel-@item.SpecialScheduleId">Confirm Delete</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        Are you sure you want to delete the special schedule "@item.Title"?
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                        <form asp-action="DeleteSpecialSchedule" asp-route-id="@item.SpecialScheduleId" method="post">
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="6" class="text-center">No special schedules defined yet.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
