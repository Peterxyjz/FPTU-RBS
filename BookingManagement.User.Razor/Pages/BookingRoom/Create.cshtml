@page
@model BookingManagement.User.Razor.Pages.BookingRoom.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label">UserName</label>
                <input asp-for="Booking.UserId" type="hidden" />
                <input asp-for="UserName" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Booking.RoomId" class="control-label"></label>
                <input asp-for="Booking.RoomId" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="Booking.BookingDate" class="control-label"></label>
                <input asp-for="Booking.BookingDate" class="form-control" type="date" />
                <span asp-validation-for="Booking.BookingDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.TimeSlotId" class="control-label"></label>
                <select asp-for="Booking.TimeSlotId" class ="form-control" asp-items="ViewBag.TimeSlotId"></select>
            </div>
            @* <div class="form-group"> *@
            @*     <label asp-for="Booking.RejectReason" class="control-label"></label> *@
            @*     <input asp-for="Booking.RejectReason" class="form-control" /> *@
            @*     <span asp-validation-for="Booking.RejectReason" class="text-danger"></span> *@
            @* </div> *@
            @* <div class="form-group"> *@
            @*     <label asp-for="Booking.EndRecurringDate" class="control-label"></label> *@
            @*     <input asp-for="Booking.EndRecurringDate" class="form-control" /> *@
            @*     <span asp-validation-for="Booking.EndRecurringDate" class="text-danger"></span> *@
            @* </div> *@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="/RoomList/Details" asp-route-id="@Model.Booking.RoomId">Back to Detail</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
