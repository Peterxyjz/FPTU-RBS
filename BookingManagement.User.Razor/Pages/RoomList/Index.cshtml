@page
@model BookingManagement.User.Razor.Pages.RoomList.IndexModel
@{
    ViewData["Title"] = "Danh sách phòng";
}

@if ((TempData["message"] != null))
{
    <div class="alert alert-danger text-center">
        @TempData["message"]
    </div>
}

<h1>Danh sách phòng</h1>

<div class="row mb-4">
    <div class="col-md-12">
        <form method="get" class="form-inline">
            <div class="row">
                <div class="col-md-3 mb-2">
                    <div class="form-group">
                        <label for="SearchRoomName">Tên phòng:</label>
                        <input type="text" class="form-control" id="SearchRoomName" name="SearchRoomName"
                               value="@Model.SearchRoomName" placeholder="Nhập tên phòng...">
                    </div>
                </div>
                <div class="col-md-3 mb-2">
                    <div class="form-group">
                        <label for="SearchCapacity">Sức chứa (tối thiểu):</label>
                        <input type="number" class="form-control" id="SearchCapacity" name="SearchCapacity"
                               value="@Model.SearchCapacity" placeholder="Số lượng người">
                    </div>
                </div>
                <div class="col-md-3 mb-2">
                    <div class="form-group">
                        <label for="SearchRoomType">Loại phòng:</label>
                        <select class="form-control" id="SearchRoomType" name="SearchRoomType">
                            <option value="">-- Tất cả --</option>
                            @foreach (var roomType in Model.RoomTypeList)
                            {
                                <option value="@roomType.Text" selected="@(roomType.Text == Model.SearchRoomType)">
                                    @roomType.Text
                                </option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-md-3 mb-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Tìm kiếm</button>
                    <a asp-page="./Index" class="btn btn-secondary">Đặt lại</a>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr class="text-center">
            <th>
                @Html.DisplayNameFor(model => model.Room[0].RoomName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].RoomType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].Building)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].Description)
            </th>
            <th>
                Hình ảnh
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room[0].Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Room)
        {
            <tr class="text-center">
                <td>
                    @Html.DisplayFor(modelItem => item.RoomName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Capacity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Building)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="image-cell">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@(string.IsNullOrEmpty(item.ImageUrl) ? "/images/no-image.jpg" : Model.GetDirectImageUrl(item.ImageUrl))"
                             alt="Room Image"
                             class="room-image" />
                    }
                    else
                    {
                        <span class="no-image-text"> </span>
                    }
                </td>
                <td>
                    @Model.GetStatusTextForRoomList(item.Status)
                </td>
                <td>
                    @if (item.Status == 1)
                    {
                        <a asp-page="./Details" asp-route-id="@item.RoomId">Details</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Room.Count == 0)
{
    <div class="alert alert-info">Không tìm thấy phòng nào phù hợp với điều kiện tìm kiếm.</div>
}

<div>
    Page @Model.CurrentPage of @Model.TotalPages
</div>
<div>
    @if (Model.CurrentPage > 1)
    {
        <a asp-page="./Index"
           asp-route-pageNumber="@(Model.CurrentPage - 1)"
           asp-route-SearchRoomName="@Model.SearchRoomName"
           asp-route-SearchCapacity="@Model.SearchCapacity"
           asp-route-SearchRoomType="@Model.SearchRoomType"
           class="btn btn-outline-primary">Trước</a>
    }
    @if (Model.CurrentPage < Model.TotalPages)
    {
        <a asp-page="./Index"
           asp-route-pageNumber="@(Model.CurrentPage + 1)"
           asp-route-SearchRoomName="@Model.SearchRoomName"
           asp-route-SearchCapacity="@Model.SearchCapacity"
           asp-route-SearchRoomType="@Model.SearchRoomType"
           class="btn btn-outline-primary">Tiếp</a>
    }
</div>