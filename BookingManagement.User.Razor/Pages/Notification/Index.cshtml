@page
@model BookingManagement.User.Razor.Pages.Notification.IndexModel
@{
    ViewData["Title"] = "Thông báo";
}

<div class="container py-4">
    <div class="row">
        <div class="col-12">
            <h1 class="mb-4">Thông báo</h1>
            
            <div class="card shadow mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Danh sách thông báo</h5>
                    <form method="post" asp-page-handler="MarkAllAsRead" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-primary">
                            <i class="bi bi-check-all"></i> Đánh dấu đã đọc tất cả
                        </button>
                    </form>
                </div>
                <div class="card-body">
                    @if (!Model.Notifications.Any())
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-bell-slash text-muted" style="font-size: 3rem;"></i>
                            <p class="mt-3">Bạn không có thông báo nào.</p>
                        </div>
                    }
                    else
                    {
                        <div class="list-group">
                            @foreach (var notification in Model.Notifications)
                            {
                                <div class="list-group-item list-group-item-action @(notification.IsRead == false ? "bg-light" : "")">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">
                                            @if (notification.IsRead == false)
                                            {
                                                <span class="badge bg-primary me-2">Mới</span>
                                            }
                                            @notification.Title
                                        </h5>
                                        <small>@notification.CreatedAt.ToString("dd/MM/yyyy HH:mm")</small>
                                    </div>
                                    <p class="mb-1">@notification.Message</p>
                                    <div class="d-flex justify-content-between align-items-center mt-2">
                                        @if (notification.BookingId.HasValue)
                                        {
                                            <a asp-page="/BookingRoom/Details" asp-route-id="@notification.BookingId" class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i> Xem đặt phòng
                                            </a>
                                        }
                                        else
                                        {
                                            <span></span>
                                        }
                                        
                                        @if (notification.IsRead == false)
                                        {
                                            <form method="post" asp-page-handler="MarkAsRead">
                                                <input type="hidden" name="id" value="@notification.NotificationId" />
                                                <button type="submit" class="btn btn-sm btn-outline-secondary">
                                                    <i class="bi bi-check"></i> Đánh dấu đã đọc
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
            
        </div>
    </div>
</div>
