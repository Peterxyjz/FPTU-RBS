<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FPTU-RBS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BookingManagement.User.Razor.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">FPTU-RBS</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Trang chủ</a>
                        </li>
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Đặt phòng</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Lịch của tôi</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/RoomPage/Index">Danh sách phòng</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-page="/Privacy">Giới thiệu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="#">Liên hệ</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid p-0">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5>FPTU Room Booking System</h5>
                    <p class="small">Hệ thống đặt phòng thông minh cho sinh viên và giảng viên FPT University</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-muted">Điều khoản sử dụng</a></li>
                        <li><a href="#" class="text-muted">Chính sách bảo mật</a></li>
                        <li><a href="#" class="text-muted">Hướng dẫn sử dụng</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h5>Liên hệ</h5>
                    <ul class="list-unstyled">
                        <li class="small"><i class="bi bi-geo-alt me-2"></i>FPT University, Khu CNC Hòa Lạc, Km29 Đại lộ Thăng Long</li>
                        <li class="small"><i class="bi bi-telephone me-2"></i>(024) 7300 5588</li>
                        <li class="small"><i class="bi bi-envelope me-2"></i>daihoc.hcm@fpt.edu.vn</li>
                    </ul>
                </div>
            </div>
            <hr />
            <div class="text-center">
                &copy; 2025 - FPTU Room Booking System - <a asp-area="" asp-page="/Privacy">Privacy</a>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
